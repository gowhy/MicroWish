@model LoveBank.Core.Members.User

@{
    ViewBag.Title = "找回密码";
}
<script src="@Url.Content("~/Content/Default/JS/MailJump.js")" type="text/javascript"></script>
<div class="ui-body">
    <div class="ui-inner">
        <div class="ui-title">
            <h1><i class="iconfont">&#xe624;</i> 找回密码</h1>
            <div class="triangle"></div>
        </div>
        <div class="ui-box">
            <div class="ui-box-step">
               <ol class="ui-step ui-step-4">
                    <li class="ui-step-start ui-step-done">
                        <div class="ui-step-line">-</div>
                        <div class="ui-step-icon">
                            <i class="iconfont">&#xe610;</i>
                            <i class="ui-step-number">1</i>
                            <span class="ui-step-text">输入账户名</span>
                        </div>
                    </li>
                    <li class="ui-step-active ui-step-done">
                        <div class="ui-step-line">-</div>
                        <div class="ui-step-icon">
                            <i class="iconfont">&#xe610;</i>
                            <i class="ui-step-number">2</i>
                            <span class="ui-step-text">验证账户名</span>
                        </div>
                    </li>
                    <li class=" ">
                        <div class="ui-step-line">-</div>
                        <div class="ui-step-icon">
                            <i class="iconfont">&#xe610;</i>
                            <i class="ui-step-number">2</i>
                            <span class="ui-step-text">重置密码</span>
                        </div>
                    </li>
                    <li class="ui-step-end">
                        <div class="ui-step-line">-</div>
                        <div class="ui-step-icon">
                            <i class="iconfont">&#xe610;</i>
                            <i class="ui-step-number">&#xf00b2;</i>
                            <span class="ui-step-text">完成</span>
                        </div>
                    </li>
                </ol>
            </div>
             <div class="ui-tipbox ui-tipbox-success">
                <div class="ui-tipbox-icon">
                    <i class="iconfont" title="成功">&#xf0156;</i>
                </div>
                <div class="ui-tipbox-content">
                    <h3 class="ui-tipbox-title">确认邮件已发出，请您登录邮箱进行确认</h3>
                    <p class="ui-tipbox-explain">@Html.Raw(string.Format("找回密码确认邮件已发送到你的邮箱{0},请及时登录进行确认！",@Model.Email))</p>
                    <p class="ui-tipbox-explain"><a class="wy-btn" href="javascript:void(0)" onclick="$.mailGo('@Model.Email')">立即登录邮箱确认</a> | <a href="@Url.Action("SendPasswordByEmail", "Account", new { email = Model.Email })">再次发送</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
