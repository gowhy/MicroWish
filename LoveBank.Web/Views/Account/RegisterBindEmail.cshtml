@model LoveBank.Core.Members.User
@{
    ViewBag.Title = "RegisterBindEmail";
    Layout = "~/Views/Shared/_Layout.cshtml";    
}
<script type="text/javascript" src="@Url.Content("~/Content/Default/JS/jquery.validate.js")"> </script>
<script type="text/javascript" src="@Url.Content("~/Content/Default/JS/messages_zh.js")"> </script>
<script type="text/javascript">
    $().ready(function () {
        $('form').validate({
            rules: {
                Email: {
                    required: true
                }
            },
            messages: {
                Email: {
                    required: "<i class='ui-tiptext-icon iconfont' id='iusername-error'  title='出错'>&#xf0155;</i><span  style='color:Red;'>请输入邮箱！</span>"
                }
            },
            errorPlacement: function (error, element) {
                if (element.is("#Email")) {
                   error.appendTo('#email-error');
                }
            }
        });
    });
</script>
<div class="ui-body">
    <div class="ui-inner">
        <div class="ui-title">
            <h1><i class="iconfont">&#xe624;</i> 用户注册</h1>
            <div class="triangle"></div>
        </div>
        <div class="ui-box ui-reg">
            <div class="ui-box-step">
                <ol class="ui-step ui-step-3">
                    <li class="ui-step-start ui-step-done">
                        <div class="ui-step-line">-</div>
                        <div class="ui-step-icon">
                            <i class="iconfont">&#xe610;</i>
                            <i class="ui-step-number">1</i>
                            <span class="ui-step-text">账户信息</span>
                        </div>
                    </li>
                    <li class="ui-step-active">
                        <div class="ui-step-line">-</div>
                        <div class="ui-step-icon">
                            <i class="iconfont">&#xe610;</i>
                            <i class="ui-step-number">2</i>
                            <span class="ui-step-text">账户验证</span>
                        </div>
                    </li>
                    <li class="ui-step-end">
                        <div class="ui-step-line">-</div>
                        <div class="ui-step-icon">
                            <i class="iconfont">&#xe610;</i>
                            <i class="iconfont ui-step-number">&#xf00b2;</i>
                            <span class="ui-step-text">注册成功</span>
                        </div>
                    </li>
                </ol>
            </div>
            <div class="ui-tab">
                <ul class="ui-tab-items">
                    <li class="ui-tab-item">
                        <a href="@Url.Action("RegisterBindPhone", "Account")">手机绑定</a>
                    </li>
                    <li class="ui-tab-item ui-tab-item-current">
                        <a href="@Url.Action("RegisterBindEmail", "Account")">邮箱绑定</a>
                    </li>
                </ul>
            </div>
           @using (Html.BeginForm("Email", "Account", FormMethod.Post, new { @class = "ui-form" }))
           {
                <fieldset>
                <legend>账户注册</legend>
                    <div class="ui-form-item">
                        <label class="ui-label" for="Email">邮箱：</label>
                        <input id="Email" name="Email" class="ui-input ui-input-large" value="" />
                        <p id="email-error" class="ui-form-explain ui-tiptext ui-tiptext-error"></p>
                    </div>
                    <div class="ui-form-item"><button  class="ui-button ui-button-orange big" type="submit">验证邮件</button></div>
                </fieldset>
           }
        </div>
    </div>
</div>
