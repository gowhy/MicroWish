@using LoveBank.Common
@using InputType = LoveBank.Common.InputType
@model LoveBank.P2B.Domain.Config.MessageConfig
@section HeadSection
{
    @Html.IncludeScript("~/Content/JS/config.js")
}
<div class="main_title">
    系统配置</div>
<div class="blank5">
</div>
<div class="button_row">
    <a class="button" href="@Url.Action("Index")">邮件和短信</a>
</div>
<div class="blank5">
</div>
@using (Html.BeginForm("PostMessage", "Config"))
{
    <table class="form conf_tab" cellpadding=0 cellspacing=0>
        <tr>
            <td colspan="2" class="topTd">
            </td>
        </tr>
        <tr>
            <td class="item_title">开启消息队列</td>
            <td class="item_input">
                <select name="MessageOpen">
                    <option value="True" @(Model.Enable ? "selected='selected'" : "")>开启</option>
                    <option value="False" @(!Model.Enable ? "selected='selected'" : "")>关闭</option>
                </select>
            </td>
        </tr>
        <tr>
            <td class="item_title">开启邮件</td>
            <td class="item_input">
                <select name="MailOpen">
                    <option value="True" @(Model.EmailOpen ? "selected='selected'" : "")>开启</option>
                    <option value="False" @(!Model.EmailOpen ? "selected='selected'" : "")>关闭</option>
                </select>
            </td>
        </tr>
        <tr>
            <td class="item_title">开启短信</td>
            <td class="item_input">
                <select name="SmsOpen">
                    <option value="True" @(Model.SmsOpen ? "selected='selected'" : "")>开启</option>
                    <option value="False" @(!Model.SmsOpen ? "selected='selected'" : "")>关闭</option>
                </select>
            </td>
        </tr>
        <tr>
            <td class="item_title">开启自动投标</td>
            <td class="item_input">
                <select name="AutoBid">
                    <option value="True" @(Model.AutoBid ? "selected='selected'" : "")>开启</option>
                    <option value="False" @(!Model.AutoBid ? "selected='selected'" : "")>关闭</option>
                </select>
            </td>
        </tr>
        <tr>
            <td colspan="2" class="bottomTd">
            </td>
        </tr>
    </table>
    <div class="blank5">
    </div>
    <table class="form" cellpadding="0" cellspacing="0">
        <tr>
            <td colspan="2" class="topTd">
            </td>
        </tr>
        <tr>
            <td class="item_title">
            </td>
            <td class="item_input">
                <input type="submit" class="button" value="编辑" />
                <input type="reset" class="button" value="重置" />
            </td>
        </tr>
        <tr>
            <td colspan="2" class="bottomTd">
            </td>
        </tr>
    </table> 
}
