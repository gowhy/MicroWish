@model LoveBank.Core.Domain.MailServer
<div class="main_title">
    编辑 <a href="@Url.Action("MailServer", "MailManagment")" class="back_list">返回列表</a></div>
<div class="blank5">
</div>
@using (Html.BeginForm("PostEditMailServer","MailManagment"))
{
    <table class="form" cellpadding="0" cellspacing="0">
        <tbody><tr>
                   <td colspan="2" class="topTd"></td>
               </tr>
            <tr>
                <td class="item_title">SMTP服务器地址:</td>
                <td class="item_input"><input type="text" class="textbox require" value="@Model.SmtpServer" name="SmtpServer"></td>
            </tr>
            <tr>
                <td class="item_title">帐号:</td>
                <td class="item_input"><input type="text" class="textbox require" value="@Model.SmtpName" name="SmtpName"></td>
            </tr>
            <tr>
                <td class="item_title">密码:</td>
                <td class="item_input"><input type="password" class="textbox require" value="@Model.SmtpPassword" name="SmtpPassword"></td>
            </tr>
            <tr>
                <td class="item_title">是否需要身份验证:</td>
                <td class="item_input">
                    <select name="IsVerify">
                        <option value="true" @(Model.IsVerify ? "selected" : "")>是</option>
                        <option value="false"  @(!Model.IsVerify ? "selected" : "")>否</option>				
                    </select>
                </td>
            </tr>
            <tr>
                <td class="item_title">端口号:</td>
                <td class="item_input"><input type="text" class="textbox"  value="@Model.SmtpPort" name="SmtpPort"></td>
            </tr>
            <tr>
                <td class="item_title">是否SSL加密:</td>
                <td class="item_input">
                    <select name="IsSsl">
                        <option value="false"  @(!Model.IsSsl ? "selected" : "")>否</option>
                        <option value="true"  @(Model.IsSsl ? "selected" : "")>是</option>
                    </select>
                </td>
            </tr>	
            <tr>
                <td class="item_title">已用次数:</td>
                <td class="item_input"><input type="text" class="textbox" name="TotalUse" value="@Model.TotalUse"></td>
            </tr>
            <tr>
                <td class="item_title">可用次数:</td>
                <td class="item_input">
                    <input type="text" class="textbox" name="UseLimit" value="@Model.UseLimit">
                    <span class="tip_span">[可用次数为0时表示无限次数使用]</span>
                </td>
            </tr>
            <tr>
                <td class="item_title">是否自动清零:</td>
                <td class="item_input">
                    <select name="IsReset">
                        <option value="false"  @(!Model.IsReset ? "selected" : "")>否</option>
                        <option value="true"  @(Model.IsReset ? "selected" : "")>是</option>
                    </select>
                    <span class="tip_span">[开启自动清零，在设置可用次数时，当发数用完后将清空已发送的次数，可使该邮箱重新被使用]</span>
                </td>
            </tr>
            <tr>
                <td class="item_title">状态:</td>
                <td class="item_input">
                    <lable>有效<input type="radio" name="IsEffect" value="true" @(Model.IsEffect ? "checked" : "")>></lable>
                    <lable>无效<input type="radio" name="IsEffect" value="false" @(!Model.IsEffect ? "checked" : "")></lable>
                </td>
            </tr>

            <tr>
                <td class="item_title"></td>
                <td class="item_input">
                    <!--隐藏元素-->
                    <input type="hidden" name="Id" value="@Model.ID"/>
                    <!--隐藏元素-->
                    <input type="submit" class="button" value="编辑">
                    <input type="reset" class="button" value="重置">
                </td>
            </tr>
            <tr>
                <td colspan="2" class="bottomTd"></td>
            </tr>
        </tbody></table>
}