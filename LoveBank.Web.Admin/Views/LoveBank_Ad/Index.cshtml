@model  LoveBank.Common.IPagedList<LoveBank.Web.Admin.Models.LoveBank_AdModel>
@using MvcContrib.UI.Pager;
@using LoveBank.Common
@using LoveBank.MVC
@using LoveBank.MVC.UI
@using MvcContrib.UI.Grid

@section HeadSection {
    <script type="text/javascript">

        function del(id) {

            var url = '@Url.Action("Delete")' + '?id=' + id;
            deleteMethod(id, "Delete");

        }
    </script>

}


<div id="button_row">

    <a class="easyui-linkbutton" data-options="iconCls:'icon-add'" href="@Url.Action("Add")">新增广告</a>
</div>
<div class="grid_box">

    @Html.Grid(Model).Columns(column =>
    {
        //column.CheckBox(x => x.Id);
        column.For(x => x.ID).Named("ID");
        column.For(x => x.Title ?? "").Named("标题");
        column.For(x => x.Postion).Named("广告位置");
        column.For(x => x.LinkUrl).Named("点击广告跳转Url");
        column.For(x => x.Desc).Named("备注");
        column.For(x => x.State).Named("状态");
        column.For(x => x.AddTime.ToString("yyyy-MM-dd")).Named("广告发布时间");
        column.Buttons(btns => btns.Add(x => Html.ActionLink("编辑", "Edit", new { id = x.ID }))
            .Add(x => Html.ScriptLink("删除", "del({0})", x.ID))

            );
    }).Complex(ViewData)

</div>

@Html.Pager(Model)